<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<!-- 引入外部属性文件。 从classpath根路径去加载db.properties数据库4要素文件   -->
	<properties resource="properties/db.properties" />
	
	<context id="DB2Tables" targetRuntime="MyBatis3">
	 
		<!-- 是否去除自动生成注释 --> 
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!-- 数据库连接信息 -->
		<jdbcConnection driverClass="${db.driverClassName}"
			connectionURL="${db.url}"
			userId="${db.name}" password="${db.pass}">
		</jdbcConnection>
	 
	 	

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 设置javabean生成的位置 -->
		<javaModelGenerator
			targetPackage="com.gz.ssm.entity" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 指定sql映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 指定dao接口生成的位置，mapper接口 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.gz.ssm.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 指定每个表的生成策略 -->
		<!-- http://www.mybatis.org/generator/configreference/table.html -->
		<table tableName="student" domainObjectName="Student" schema="root"><!-- schema是数据库用户名，如果有多个用户名就需要这个区分了。 -->

		</table>

	</context>
</generatorConfiguration>